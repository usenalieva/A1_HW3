<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_receivedImage"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_photo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_receivedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_receivedImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20dp"
        android:hint="Message from the Second Activity"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btn_openSecAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_receivedText"
        android:layout_marginTop="30dp"
        android:text="OPEN the 2nd Activity"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_sendViaGmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_openSecAct"
        android:layout_marginTop="30dp"
        android:text="SEND via Gmail"
        android:textAllCaps="false"/>


</androidx.constraintlayout.widget.ConstraintLayout>